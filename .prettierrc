{
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "none",
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"arrowParens": "avoid",
	"plugins": ["prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "package.json",
			"options": {
				"printWidth": 100,
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
